{
  "name": "Twilio-Video Inspector",
  "version": "1.3",
  "description": "Inspects Twilio-Video rooms",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Inspect Twilio-Video Rooms",
    "default_icon": "twilio-inspector.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "system.cpu",
    "system.memory",
    "activeTab"
  ],
  "web_accessible_resources": [
    "web_accessible/index.js"
  ],
  "manifest_version": 2
}
